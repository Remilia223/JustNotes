<resources>

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>

        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="actionOverflowButtonStyle">@style/Threedotsmenu</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>



    </style>

    <style name="Threedotsmenu" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/black</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="DarkTheme" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>

        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="actionOverflowButtonStyle">@style/Threedotsmenu</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
</resources>